<!DOCTYPE html>
<html lang='en'>
<head>
  <meta name='viewport' content="width=device-width, initial-scale=1.0">
  <meta charset="utf-8">
  <link rel="stylesheet" href="../css/styles.css">
  <link rel="stylesheet" href="../css/header.css">
  <link rel="stylesheet" href="../css/in_header.css">
  <link rel="stylesheet" href="../css/search.css">
  <link href="https://fonts.googleapis.com/css2?family=Ubuntu:wght@500&display=swap" rel="stylesheet">
  <link href="https://fonts.googleapis.com/css2?family=Cabin:ital@0;1&display=swap" rel="stylesheet">
</head>
  {{>in_header}}
<body>
  <div id="grid_cont">

    <form id='form'>
      <input placeholder='mm/dd/yy' type='text' name='date' id="date_inp">
      <button id='submit' class='button' type='submit'>Submit</button>
    </form>

    <h1 id="date"></h1>

    <div id="entry_cont">
      <div class="notes_cont">
        <h2 id="exer_lab">Exercise</h2>
        <p class='field' id='exercise'></p>

        <h2 id='work_lab'>Work</h2>
        <p class='field' id='work'></p>

        <h2 id="notes_lab">Notes</h2>
        <p class='field' id='notes'></p>
      </div>

      <div class="val_cont">
        <h2 id="sleep_lab">Sleep</h2>
        <h2 id="diet_lab">Diet</h2>

        <h3 id='sleep'></h3>
        <h3 id='diet'></h3>

        <h2 id='exp_lab'>Expenses</h2>
        <h2 id='inc_lab'>Income</h2>

        <h3 id='expenses'></h3>
        <h3 id='income'></h3>
      </div>

    </div>
    <button class='button' id="edit">Edit Entry</button>
  </div>

  <form style="right: -3000px; left: 1000px;" id="edit_cont">
    <img id="back_arrow" src="../images/edit_arrow_4.png">
    <div class="notes_cont">
      <h2>Exercise</h2>
      <textarea required class='field' name='exercise' rows=6 cols=50></textarea>

      <h2>Work</h2>
      <textarea required  class='field'name='work' rows=6 cols=50></textarea>

      <h2>Notes</h2>
      <textarea required class='field' name='notes' rows=6 cols=50></textarea>
    </div>

    <div class="val_cont">
      <h2>Sleep</h2>
      <h2>Diet</h2>

      <select required  class='field' name="sleep">
        <option value=1>1</option>
        <option value=2>2</option>
        <option value=3>3</option>
        <option value=4>4</option>
        <option value=5>5</option>
        <option value=6>6</option>
        <option value=7>7</option>
        <option value=8>8</option>
        <option value=9>9</option>
        <option value=10>10</option>
      </select>
      <select required  class='field' name="diet">
        <option value=1>1</option>
        <option value=2>2</option>
        <option value=3>3</option>
        <option value=4>4</option>
        <option value=5>5</option>
        <option value=6>6</option>
        <option value=7>7</option>
        <option value=8>8</option>
        <option value=9>9</option>
        <option value=10>10</option>
      </select>

      <h2>Expenses</h2>
      <h2>Income</h2>

      <input required class='field' type='number' name="expenses">
      <input required class='field' type='number' name="income">
    </div>
    <button id='edit_submit' class='button' type='submit'>Submit</button>
  </form>

  {{>pop_up_msg}}

  <script src ='../js/pop_up_msg.js' var displayMsg;></script>
  <script src="../js/logout.js"></script>
  <script src="../js/nav_menu.js"></script>
  <script src="../js/date_regex.js"var mmddyyToStr; var verifyFormat;></script>
  <script src="../js/search_date.js"></script>
  <script src="../js/edit_entry.js"></script>

</body>
</html>
